   <div class="container-fluid">
       <div class="row">

  <%  for(let u of data[0]) { %>

    <div class="card col-md-3 mr-2 ml-2 mt-2"  style="width: 14rem;">
        <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= u.poster_path %>" alt="Card image cap" height="400">
        <div class="card-body">
            <h4><%= u.title %></h4>

          <p class="card-text"><%= u.overview.substring(0,200) %>.</p>
          <p style="font-weight:bold"> Rating :<%= u.vote_average %> <i class="fa fa-star" aria-hidden="true"></i></p>
        </div>
      </div>
<% }%>
    </div>
